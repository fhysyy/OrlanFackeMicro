{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning",
      "FakeMicro": "Information",
      "Orleans": "Information"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=fakemicro;Username=postgres;Password=123456;Port=5432",
    "Orleans": "Server=localhost;Database=fakemicro;Username=postgres;Password=123456;Port=5432"
  },
  "Orleans": {
    "ClusterId": "FakeMicroCluster",
    "ServiceId": "FakeMicroService",
    "SiloPort": 11111,
    "GatewayPort": 30000,
    "UseLocalhostClustering": true
  },
  "MongoDB": {
    "ConnectionString": "mongodb://192.168.124.20:27017",
    "DatabaseName": "fakemicro",
    "Collection": "fakemicro",
    "EnableLogging": false,
    "ConnectionTimeout": 30,
    "MaxConnectionPoolSize": 100,
    "MinConnectionPoolSize": 10,
    "User": "fakemicro",
    "Password": "fakemicro"
  },
  "Database": {
    "Type": "PostgreSQL",
    "Database": "fakemicro",
    "port": 5432,
    "Username": "postgres",
    "Password": "123456",
    "Server": "127.0.0.1",
    "TrustServerCertificate": false,
    "ConnectionTimeout": 299
  },

  "SqlSugar": {
    "DbType": "PostgreSQL",
    "ConnectionString": "Host=localhost;Database=fakemicro;Username=postgres;Password=123456;Port=5432",
    "EnableSqlLog": true,
    "SlowQueryThreshold": 1000,
    "EnableAop": true,
    "ConnectionPoolSize": 50,
    "ConnectionTimeout": 30,
    "EnableReadWriteSeparation": false,
    "SlaveConnectionStrings": [
      "Server=slave1;Database=fakemicro;Username=postgres;Password=123456;Port=5432",
      "Server=slave2;Database=fakemicro;Username=postgres;Password=123456;Port=5432"
    ]
  },
  "Elasticsearch": {
    "Url": "http://localhost:9200",
    "IndexFormat": "fakemicro-silo-logs-{0:yyyy.MM}",
    "NumberOfShards": 1,
    "NumberOfReplicas": 0
  },
  "Jwt": {
    "SecretKey": "a-string-secret-at-least-256-bits-long",
    "Issuer": "FakeMicro",
    "Audience": "FakeMicro-Users",
    "ExpireMinutes": 60,
    "RefreshExpireDays": 7
  }
}