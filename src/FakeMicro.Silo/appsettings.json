{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "Orleans": "Information",
      "FakeMicro.DatabaseAccess.Services.DatabaseInitializerHostedService": "Information"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Host=127.0.0.1;Port=5432;Database=fakemicro;Username=postgres;Password=123456;SearchPath=public"
  },
  "Database": {
    "Type": "PostgreSQL",
    "Server": "127.0.0.1",
    "Port": 5432,
    "Database": "fakemicro",
    "Username": "postgres",
    "Password": "123456",
    "TrustServerCertificate": false,
    "ConnectionTimeout": 30,
    "CommandTimeout": 60,
    "MinPoolSize": 10,
    "MaxPoolSize": 200,
    "ConnectionLifetime": 3600,
    "IncludeErrorDetail": true,
    "EnableReadWriteSeparation": false
  },
  "MongoDB": {
    "ConnectionString": "mongodb://127.0.0.1:27017",
    "DatabaseName": "FakeMicroDB",
    "EnableLogging": true,
    "ConnectionTimeout": 30,
    "MaxConnectionPoolSize": 100,
    "MinConnectionPoolSize": 10
  },
  "SqlSugar": {
    "DbType": "PostgreSQL",
    "ConnectionString": "Host=127.0.0.1;Port=5432;Database=fakemicro;Username=postgres;Password=123456;SearchPath=public",
    "EnableSqlLog": true,
    "SlowQueryThreshold": 2000,
    "EnableAop": true,
    "ConnectionPoolSize": 50,
    "ConnectionTimeout": 30,
    "EnableReadWriteSeparation": false,
    "SlaveConnectionStrings": []
  },
  "DatabaseInitializer": {
    "EnableSeedData": true,
    "EnableIndexCreation": true,
    "RecreateTablesInDevelopment": false,
    "MigrationVersion": "1.0.0"
  },
  "Orleans": {
    "ClusterId": "FakeMicroCluster",
    "ServiceId": "FakeMicroService",
    "AdvertisedIP": "127.0.0.1",
    "SiloPort": 11111,
    "GatewayPort": 30000,
    "DashboardPort": 8080,
    "EnableDashboard": true
  },
  "Jwt": {
    "SecretKey": "your-super-secret-jwt-key-that-is-at-least-256-bits-long",
    "Issuer": "FakeMicro",
    "Audience": "FakeMicro.Users",
    "ExpirationMinutes": 1440
  }, 
  "FileStorage": {
    "BasePath": "uploads",
    "MaxFileSize": 10485760,
    "AllowedExtensions": [ ".jpg", ".jpeg", ".png", ".pdf", ".doc", ".docx" ],
    "AllowedFileTypes": ["image/jpeg", "image/png", "application/pdf"],
    "PreviewBaseUrl": "https://localhost:5280/api/files/preview",
    "DefaultPreviewExpiryMinutes": 60
  }
}