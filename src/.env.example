# ========================================
# FakeMicro Environment Configuration
# ========================================
# Copy this file to .env and update with your actual values
# NEVER commit .env file to version control!

# ========================================
# JWT Configuration
# ========================================
# Generate with: openssl rand -base64 64
JWT_SECRET_KEY=your-super-secret-jwt-key-at-least-256-bits-long-change-this-in-production

# ========================================
# Database Configuration
# ========================================
DB_HOST=127.0.0.1
DB_PORT=5432
DB_NAME=fakemicro
DB_USERNAME=postgres
DB_PASSWORD=your-db-password-change-this

# ========================================
# Redis Configuration
# ========================================
REDIS_CONNECTION_STRING=localhost:6379
REDIS_DATABASE=0
REDIS_PASSWORD=

# ========================================
# MongoDB Configuration
# ========================================
MONGODB_CONNECTION_STRING=mongodb://127.0.0.1:27017
MONGODB_DATABASE_NAME=FakeMicroDB

# ========================================
# Orleans Configuration
# ========================================
ORLEANS_CLUSTER_ID=FakeMicroCluster
ORLEANS_SERVICE_ID=FakeMicroService
ORLEANS_ADVERTISED_IP=127.0.0.1
ORLEANS_USE_LOCALHOST_CLUSTERING=false

# ========================================
# API Configuration
# ========================================
ASPNETCORE_ENVIRONMENT=Production
ASPNETCORE_URLS=https://localhost:5001;http://localhost:5000
API_PORT=5000
API_SSL_PORT=5001

# ========================================
# Logging Configuration
# ========================================
LOG_LEVEL=Information
LOG_PATH=/var/log/fakemicro

# ========================================
# Email Configuration (Optional)
# ========================================
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_FROM_ADDRESS=noreply@fakemicro.com
EMAIL_USERNAME=
EMAIL_PASSWORD=

# ========================================
# Azure Key Vault (Optional - Production)
# ========================================
# AZURE_KEY_VAULT_URI=https://your-keyvault.vault.azure.net/
# AZURE_TENANT_ID=
# AZURE_CLIENT_ID=
# AZURE_CLIENT_SECRET=

# ========================================
# Monitoring (Optional)
# ========================================
# APPLICATION_INSIGHTS_CONNECTION_STRING=
# SENTRY_DSN=
